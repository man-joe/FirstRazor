@page
@model RazorApp.Pages.DrinkCategories.IndexModel

@{
    ViewData["Title"] = "Drink Categories";
}

<h1>Drink Categories</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrinkCategory[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkCategory[0].MinProductionCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkCategory[0].Alcoholic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkCategory[0].CompanyHead)
            </th>
            <th>
                RowVersion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DrinkCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinProductionCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alcoholic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyHead.Name)
            </td>
            <td>
                @item.RowVersion[7]
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DrinkCategoryID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DrinkCategoryID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DrinkCategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
