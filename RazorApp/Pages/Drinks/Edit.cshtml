@page
@model RazorApp.Pages.Drinks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Drink.DrinkID" />
            <!--Drink ID label.. -->
            <div class="form-group">
                <label asp-for="Drink.DrinkID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Drink.DrinkID)</div>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Name" class="control-label"></label>
                <input asp-for="Drink.Name" class="form-control" />
                <span asp-validation-for="Drink.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Size" class="control-label"></label>
                <input asp-for="Drink.Size" class="form-control" />
                <span asp-validation-for="Drink.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.DrinkCategoryID" class="control-label"></label>
                <!-- Selecting DrinkCategorySL -->
                <select asp-for="Drink.DrinkCategoryID" class="form-control" 
                        asp-items="@Model.DrinkCategoryNameSL"></select>
                <!--<select asp-for="Drink.DrinkCategoryID" class="form-control" asp-items="ViewBag.DrinkCategoryID"></select> -->
                <span asp-validation-for="Drink.DrinkCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
